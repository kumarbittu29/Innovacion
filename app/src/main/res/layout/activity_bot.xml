<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.sae_akgec.www.innovacion18.BotActivity"
    android:background="@drawable/aaaa"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bot_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dummy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/bot_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dummy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/left"/>

    <ImageView
        android:id="@+id/dummy"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/todo4"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/robot"/>

    <ImageView
        android:id="@+id/bot_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dummy"
        app:srcCompat="@drawable/up" android:contentDescription="@string/todo2" />

    <ImageView
        android:id="@+id/bot_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy"
        app:srcCompat="@drawable/down" />
</android.support.constraint.ConstraintLayout>

